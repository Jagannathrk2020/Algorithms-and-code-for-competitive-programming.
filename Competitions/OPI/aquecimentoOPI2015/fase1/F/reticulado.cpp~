#include <stdio.h>

using namespace std;

int gcd(int a, int b){
	return b == 0 ? a : gcd(b, a % b);
}

int answer(int x){
	int count = 0;
	for(int i = 2; i <= x; i++){
		for(int j = i+1; j <= x; j++){
			if(gcd(i,j) == 1)
				count++;
		}
	}
	return 2*count + 2*x + 1;
}

int main() {

	int n;
	scanf("%d",&n);
	for(int i = 1; i <= n; i++){
		int x;
		scanf("%d",&x);
		printf("%d %d %d\n",i,x,answer(x));
	
	}
	return 0;
}
